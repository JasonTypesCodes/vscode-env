// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Source Code Variable, Source Code Pro, monospace",
    "editor.fontSize": 16,
    "editor.fontWeight": "600",
    "editor.tabSize": 2,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.rulers": [
      120
    ],
    "editor.renderWhitespace": "boundary",
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/**": true,
      "**/flow-typed/**": true,
      "**/coverage/**": true
    },
    "files.insertFinalNewline": true,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "window.zoomLevel": 0,
    "explorer.openEditors.visible": 0,
    "explorer.autoReveal": false,
    "editor.wordWrap": "on",
    "keyboard.dispatch": "keyCode",
    "javascript.validate.enable": false,
    "workbench.colorTheme": "Bright night",
    "extensions.autoUpdate": true,
    "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/target": true,
      "**/build": true,
      "**/bin": true,
      "**/gradle": true,
      "**/.gradle": true
    },
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k",
        "C:\\Program Files\\Git\\bin\\bash.exe"
    ],
    "terminal.integrated.fontFamily": "Source Code Variable, Source Code Pro Semibold, Hack, monospace",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.cursorBlinking": true,
    "workbench.iconTheme": "easy-icons",
    "workbench.editor.showTabs": false,
    "extensions.ignoreRecommendations": false,
    "zenMode.hideStatusBar": true,
    "zenMode.centerLayout": false,
    "emmet.includeLanguages": {
      "javascript": "javascriptreact"
    },
    "breadcrumbs.enabled": false,
    "zenMode.hideLineNumbers": false,
    "cSpell.userWords": [
      "GORM",
      "Micronaut",
      "triaging"
    ],
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.semanticHighlighting.enabled": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.project.importOnFirstTimeStartup": "automatic",
    "maven.executable.preferMavenWrapper": true
  }
